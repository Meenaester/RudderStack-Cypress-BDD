name: Cypress BDD Tests

on:
  schedule:
    - cron: "0 2 * * *" 
  workflow_dispatch:      

jobs:
  cypress-run:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        env: [dev, qa]  
    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: 18

      - name: Install dependencies
        run: npm ci

      - name: Run Cypress tests
        run: |
          npx cross-env ENV=${{ matrix.env }} npx cypress run

      - name: Generate Cucumber HTML Report
        run: npm run cucumber:report

      - name: Upload Test Report
        uses: actions/upload-artifact@v3
        with:
          name: cucumber-report-${{ matrix.env }}
          path: cypress/report
